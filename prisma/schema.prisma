// Prisma schema for CMS
// Database: PostgreSQL

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Project {
  id          String   @id @default(cuid())
  title       String
  slug        String   @unique
  description String?
  imageUrl    String?
  siteUrl     String?
  tags        String[]
  order       Int       @default(0)
  published   Boolean   @default(true)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model SiteText {
  key       String  @id
  value     String
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())
}

// Prisma schema for CMS
// Database: PostgreSQL

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model SiteText {
  key       String   @id @db.VarChar(120)
  value     String   @db.Text
}

model ImageAsset {
  id        String   @id @default(cuid())
  url       String
  width     Int?
  height    Int?
  alt       String?
  createdAt DateTime @default(now())
}

model Project {
  id           String    @id @default(cuid())
  slug         String    @unique
  title        String
  summary      String?
  coverUrl     String?
  galleryUrls  String[]  @default([])
  tags         String[]  @default([])
  externalUrl  String?
  order        Int       @default(0)
  published    Boolean   @default(false)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  // SEO
  seoTitle     String?
  seoDesc      String?
}

model PageSEO {
  id          String   @id @default(cuid())
  page        String   @unique
  title       String?
  description String?
  ogImage     String?
  updatedAt   DateTime @updatedAt
}
